# Puerto en el que correrá la aplicación
PORT=3000

# URL de conexión a la base de datos PostgreSQL
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:mysecretpassword@localhost:5432/tecnica7db?schema=public"

# Configuración del servidor de correo (ejemplo con Ethereal, reemplazar con tu proveedor SMTP)
MAIL_HOST="smtp.ethereal.email"
MAIL_PORT=587
MAIL_SECURE=false # true para puerto 465, false para otros como 587 (STARTTLS)
MAIL_USER="your_ethereal_user@ethereal.email" # Reemplazar con tu usuario de Ethereal o SMTP
MAIL_PASS="your_ethereal_password" # Reemplazar con tu contraseña de Ethereal o SMTP

# Dirección "De" para los correos enviados por el sistema
MAIL_FROM="noreply@yourdomain.com"

# Dirección "Para" donde se enviarán los correos de contacto (puede ser una o varias separadas por coma)
MAIL_TO="dominefolcomatiass@gmail.com"

# --- Seguridad ---
# Genera una clave secreta fuerte y única para producción. Puedes usar `openssl rand -base64 32` para crear una.
JWT_SECRET="your_super_secret_jwt_key"
