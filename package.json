{
  "name": "tecnica7-webapp-ts",
  "version": "1.0.0",
  "description": "Migracion de Tecnica 7 Web App a Typescript y Docker con PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd src && tsc",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "concurrently \"npm run dev --prefix frontend\" \"npm run dev\"",
    "dev": "nodemon",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:db:pull": "prisma db pull",
    "prisma:migrate": "prisma migrate dev"
  },
  "keywords": [
    "typescript",
    "express",
    "docker",
    "postgresql"
  ],
  "author": "Jules AI Agent",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.22.0",
    "@tsparticles/engine": "^3.9.1",
    "@tsparticles/plugin-polygon-mask": "^3.9.1",
    "@tsparticles/react": "^3.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "lucide": "^0.542.0",
    "lucide-react": "^0.542.0",
    "nodemailer": "^6.9.13",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-tsparticles": "^2.12.2",
    "remark-gfm": "^4.0.1",
    "tsparticles": "^3.9.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.12.7",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
